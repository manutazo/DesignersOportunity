  <div class="columns">
  <%= form_for [@design] do |f| %>
    <div class="column is-12 container form-design">
      <p><%= f.label :title,class:'label' %></p>
        <p class="control has-icon has-icon-right">
        <%= f.text_field :title, null: false, autofocus: true, class:"input" %>
        <%= f.label :description %>
      <p class="control has-icon has-icon-right">
        <%= f.text_area :description, null: false, autofocus: true, class:"input" %>
      <p class="control has-icon has-icon-right">
      <%= f.file_field :image, null: false, class:"input"%>
      <p class="control">
    <%= f.submit "Update", class: "btn btn-primary" %><br>
    </div>
  <%end%>
