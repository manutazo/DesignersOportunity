<% @user.each do |user| %>
<div class="row">
  <div class="brand">
    <div class="card-user">
      <%=image_tag("background.png", width: "100%")%>
        <div class="text-user">
            <div class="card-image">
              <%= link_to edit_user_registration_path do %>
              <% if user.avatar.present? %>
               <img class="circle responsive-img"<%= image_tag(user.avatar.url(:medium)) %>
              <% else %>
              <img class="circle responsive-img"<%= image_tag("add_user.png", size: "300")%>
              <% end %>
              <% end %>
              <div class="center">
                <h2><%=user.name%></h2>
              </div>
          </div>
        </div>
      </div>
    </div>
    <div class="logout col s12 ">
      <div class="right-align">
        <a class="button-logout waves-effect waves-light btn red"<%= link_to(destroy_user_session_path, :method => :delete) do%>
          log out <i class="fa fa-sign-out" aria-hidden="true"></i></a>
          <% end %>
      </div>
    </div>
       <div class="col s12 m6">
         <div class="card darken-1">
           <div class="card-content">
             <span class="card-title">User Information</span>
             <ul class="collection">
              <li class="collection-item">Username: <%=user.name%></li>
              <li class="collection-item">first name: <%=user.first_name%></li>
              <li class="collection-item">last name: <%=user.last_name%></li>
              <li class="collection-item">birthday: <%=user.birthday.strftime("%d %b %y")%></li>
              <% if user.description.empty? %>
                <a class="collection-item modal-trigger" href="#modal1">Please describe here to you know</a>
              <%else%>
                <li class="collection-item">your description: <%=user.description%></li>
              <%end%>
              <div id="modal1" class="modal">
                  <div class="modal-content">
                    <form class="edit_user" id="edit_user" action="/users" accept-charset="UTF-8" method="post" enctype="multipart/form-data"><input name="utf8" type="hidden" value="âœ“"><input type="hidden" name="_method" value="put"><input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                    <div class="row">
                      <div class="input-field col s12 ">
                        <input placeholder="describe" id="description" type="text" name="user[description]" class="validate">
                         <label class="col-sm-2 control-label active" for="description">First Name</label>
                      </div>
                    </div>

                    <div class="modal-footer">
                        <div class="col s12">
                          <button type="submit" class="waves-effect waves-light btn-large">edit information
                            <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
                          </button>
                    </div>
                  </div>
                </div>
              </form>
            </div>



            </ul>
           </div>
           <div class="card-action">
                 <a class="waves-effect waves-light btn modal-trigger" href="#modal2">Edit information</a>
           <div id="modal2" class="modal">
               <div class="modal-content">
                 <%= render partial: "devise/registrations/edit"%>
               </div>
             </div>
              </div>
         </div>

       </div>
       <div class="col s12 m6">
         <div class="card darken-1">
           <div class="card-content">
             <a class="waves-effect waves-light btn"<%= link_to 'view my desigs', designer_path(user.id) %></a>
             <%=image_tag("graphics-not-available", style: "padding: 2%;")%>
           </div>
         </div>

        </div>
<%end%>
    </div>
