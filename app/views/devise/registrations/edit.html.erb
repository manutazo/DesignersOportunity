<div class="row">

    <div class="col s12 white">
        <%= form_for(resource, :as => resource_name, :url => user_registration_path, :html => {:multiparet => :true} ) do |f| %>
        <%= devise_error_messages! %>

        <div class="row center">
            <div class="col s12 edge">
                <h4 style="font-family: GillSans, Calibri, Trebuchet, sans-serif;">edit profile</h4>
            </div>
        </div>

        <div class="row center">
            <div class="col s12">

                <div class="row">
                    <div class="col s12 m6">
                        <label class="col-sm-2 control-label active" for="user_name">first name</label>
                        <div class="col-sm-4">
                            <%= f.text_field :first_name, autofocus: true %>
                        </div>
                    </div>
                    <div class="col s12 m6">
                        <label class="col-sm-2 control-label active" for="user_name">last name</label>
                        <div class="col-sm-6">
                            <%= f.text_field :last_name %>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12 m6">
                        <label class="col-sm-2 active" for="user_name">designer nick
                            <i class="material-icons tooltipped tiny" data-position="top" data-delay="50" data-tooltip="the username which will be shown in designs">info
                            </i>
                        </label>
                        <div class="input-field col-sm-6">
                            <%= f.text_field :name,  class: 'input',autofocus: true %>
                        </div>
                    </div>
                    <div class="input-field col s12 m6 ">
                        <label class="col-sm-2 control-label active" for="user_email">Email</label>
                        <div class="col-sm-6">
                            <%= f.email_field :email, class: 'input validate', id: "email", type: "email" %>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12 m6">
                        <label class="col-sm-2 control-label active" for="user_password">Password</label>
                        <div class="col-sm-6">
                            <%= f.password_field :password, autocomplete: "off",  class: 'input' %>
                        </div>
                    </div>

                    <div class="file-field input-field">
                        <div class="btn">
                            <span>File</span>
                            <input type="file" name="user[avatar]">
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text">
                        </div>
                    </div>
                        <div class="col s12 m6">
                            <button type="submit" class="waves-effect waves-light btn-large">upload image
                                <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
                            </button>
                        </div>
                        </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <%= f.submit "sign up", class: "btn btn-large blue"%>
                        <span style="float: right; padding-top: 6px">
                            <% if devise_mapping.rememberable? -%>
                            <div class="field">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                            </div>
                            <% end -%>
                        </span>
                    </div>
                </div>

            </div>
        </div>
        <% end %>
    </div>
</div>
