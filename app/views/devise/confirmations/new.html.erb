<div class="row" style="position: absolute; min-height: 100%; height:100%; width: 100%; top: 0;">

    <div class="col s12 m7 white" style="min-height:100%; height: 100%;">
      <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>

      <div class="row">
        <div class="col s12 logo center">
          <a href="/"><%= image_tag('logo')%></a>
        </div>
      </div>

      <div class="row" style="margin-bottom: 0;">
        <div class="col s12 edge">
          <h4 style="font-family: GillSans, Calibri, Trebuchet, sans-serif;">resend confirmation instructions</h4>
        </div>
      </div>

      <div class="row">
          <div class="col s12 edge" style="margin-bottom: 0; max-width: 600px;">
            <div class="input-field col s12">
                <%= f.label :email %>
                <%= f.email_field :email %>
            </div>
          </div>
          <%= f.submit t('.resend_confirmation_instructions', :default => 'send it'), class: "btn btn-large blue", style: "margin-left:4%;" %>
          <% end %>
      </div>
    </div>

  <div class="col s12 m5 blue" style="min-height: 100%; padding: 5% 5%;">
    <%= image_tag('person-log.png')%>

    <div class="row">
      <div class="s12" style="padding: 20px 0;">
        <h5 class="white-text" style="display: inline; vertical-align: middle; font-weight: 600; margin-right: 10px;">need a count?</h5>
        <a class="waves-effect waves-light btn waves-white"<%= link_to t(".sign_up here", :default => "Sign up here",  class: ""), new_registration_path(resource_name) %></a>
      </div>
    </div>

    <div class="row">
      <div class="col s12" style="padding: 20px 0px">
        <h6 class="white-text">if you have any contactanos mistake.</h6>
      </div>
        <div class="col 12 center">
           <a class="waves-effect waves-light btn waves-white center" href="mailto:manuatzo4@hotmail.es?Subject=problem%20with%20email%20confirmation" target="_top">contact us</a>
        </div>
    </div>

  </div>
</div>
